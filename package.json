{
  "name": "Cartel",
  "version": "2.0.0",
  "description": "Performance so good it should be a crime.",
  "main": "src/index.ts",
  "repository": "https://github.com/CartelModpack/Cartel.git",
  "author": "Gavin Smith <me@gavinhsmith.com>",
  "license": "MIT",
  "type": "module",
  "private": true,
  "dependencies": {
    "command-line-args": "^6.0.1",
    "config": "^3.3.12",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "semver": "^7.6.3",
    "typescript": "^5.7.2",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/command-line-args": "^5.2.3",
    "@types/config": "^3.3.5",
    "@types/node": "^22.10.2",
    "@types/semver": "^7.5.8",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2"
  },
  "scripts": {
    "clean": "rimraf dist",
    "ts:build": "tsc",
    "build": "npm-run-all clean ts:build",
    "launch": "node ./dist/index.js",
    "start": "npm-run-all \"launch {@}\" --",
    "ts:watch": "tsc --watch",
    "dev:server": "nodemon ./dist/index.js",
    "dev": "npm-run-all clean ts:build update:paths update:config --parallel ts:watch dev:server --print-label",
    "update:paths": "node ./dist/scripts/createPaths.js",
    "update:config": "node ./dist/scripts/updateConfig.js",
    "update": "git pull",
    "preinstall": "yarn run update",
    "install": "npm-run-all clean ts:build update:paths update:config"
  }
}
