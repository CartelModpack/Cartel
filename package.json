{
  "name": "Cartel",
  "version": "2.0.0",
  "description": "Performance so good it should be a crime.",
  "main": "src/index.ts",
  "repository": "https://github.com/CartelModpack/Cartel.git",
  "author": "Gavin Smith <me@gavinhsmith.com>",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "config": "^3.3.12",
    "rimraf": "^6.0.1",
    "typescript": "^5.7.2",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/config": "^3.3.5",
    "@types/node": "^22.10.2",
    "nodemon": "^3.1.9",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.9.2"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsc",
    "launch": "node ./dist/index.js",
    "start": "npm-run-all clean build launch",
    "dev:build": "tsc --watch",
    "dev:server": "nodemon ./dist/index.js --watch ./dist",
    "dev": "npm-run-all clean build --parallel dev:build dev:server --print-label",
    "install:config": "node ./scripts/updateConfig.js",
    "install": "npm-run-all install:config"
  }
}
